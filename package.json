  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/markusberg/ltpa/issues"
  },
  "homepage": "https://github.com/markusberg/ltpa#readme",
  "dependencies": {
    "iconv-lite": "~0.5.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/jest": "^24.0.15",
    "@types/node": "^10.14.13",
    "chai": "^4.2.0",
    "codecov": "^3.5.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
